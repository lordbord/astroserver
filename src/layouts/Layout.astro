---
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title?: string;
}

const { title = 'jordisbored.xyz' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Personal website of Jord - Software Developer & Tech Enthusiast" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Kode+Mono:wght@400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<Nav />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		--terminal-green: #00ff00;
		--terminal-green-dim: #00cc00;
	}

	html {
		font-family: 'Kode Mono', monospace;
		scroll-behavior: smooth;
	}
	
	body {
		margin: 0;
		min-height: 100vh;
		background: #000;
		color: var(--terminal-green);
		display: flex;
		flex-direction: column;
	}

	main {
		flex-grow: 1;
		max-width: 80rem;
		margin: 0 auto;
		padding: 6rem 1rem 2rem;
		width: 100%;
		box-sizing: border-box;
	}

	@keyframes cursor-blink {
		0%, 70% { opacity: 1; }
		71%, 100% { opacity: 0; }
	}

	.cursor::after {
		content: '_';
		animation: cursor-blink 1.2s ease-in-out infinite;
		opacity: 0.7;
	}

	@keyframes typing {
		from { width: 0 }
		to { width: 100% }
	}

	.typing-effect {
		position: relative;
		white-space: nowrap;
		margin: 0;
		animation: typing 2s steps(40, end);
	}

	.text-terminal-green { color: var(--terminal-green); }
	.text-terminal-green-dim { color: var(--terminal-green-dim); }
	.border-terminal-green { border-color: var(--terminal-green); }
</style> 